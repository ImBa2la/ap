<?xml version="1.0" encoding="utf-8"?>
<data>
	<!-- Форма редактирования -->
	<form id="form_edit_projects" title="Изменить план" method="post" autocheck="autocheck" baseURI="file:///xml/data/%SECTION%.xml?/section/modules/module[@id='%MD%']">
		<param name="row" uri="/plan[@id='%ROW%']/@id"/>
		<field type="text" name="title" label="Заголовок" size="60" uri="/plan[@id='%ROW%']/@title" check="empty"/>
		<field type="select" name="plan" label="План" uri="/plan[@id='%ROW%']/@planPath"/>
		<field type="image" name="gallery" label="Галерея" baseURI="file:///userfiles/projects/plan_%ROW%_gallery" uri="/plan[@id='%ROW%']/gallery" max="10">
			<param name="image" uri="/%IMG_NAME%.jpg?max=1024"/>
			<param name="image" uri="/%IMG_NAME%_preview.jpg?w=85&amp;h=60" preview="preview"/>
		</field>
		<buttonset>
			<button type="submit" value="Сохранить" class="ok" action="update"/>
			<button type="submit" value="Применить" class="ok" action="apply_update"/>
			<button type="submit" value="Отмена" class="cancel" action="cancel"/>
		</buttonset>
	</form>

	<!-- Форма добавления -->
	<form id="form_add_projects" title="Добавить план" method="post" autocheck="autocheck" baseURI="file:///xml/data/%SECTION%.xml?/section/modules/module[@id='%MD%']">
		<field type="text" name="title" label="Заголовок" size="60" uri="/plan[@id='%ROW%']/@title" check="empty"/>
		<field type="select" name="plan" label="План" uri="/plan[@id='%ROW%']/@planPath"/>
		<field type="image" name="gallery" label="Галерея" baseURI="file:///userfiles/projects/plan_%ROW%_gallery" uri="/plan[@id='%ROW%']/gallery" max="10">
			<param name="image" uri="/%IMG_NAME%.jpg?max=1024"/>
			<param name="image" uri="/%IMG_NAME%_preview.jpg?w=85&amp;h=60" preview="preview"/>
		</field>
		<buttonset>
			<button type="submit" value="Сохранить" class="ok" action="add"/>
			<button type="submit" value="Применить" class="ok" action="apply_add"/>
			<button type="submit" value="Отмена" class="cancel" action="cancel"/>
		</buttonset>
	</form>
	<rowlist id="project_list" pageSize="10" add="add" delete="delete">
		<col name="sort" header="№"/>
		<col name="title" header="Заголовок"/>
		<buttons>
			<button action="edit" title="Редактировать"/>
			<button action="delete" title="Удалить"/>
			<button action="move" title="Переместить"/>
		</buttons>
	</rowlist>
	
	<!-- Форма настроек -->
	<form id="settings" title="Настройки" method="post" autocheck="autocheck" baseURI="file:///ap/xml/data/%SECTION%.xml?/section/modules/module[@id='%MODULE%']">
		<param name="row" uri="/@id"/>
		<fieldset title="Настройки модуля" >
			<field type="text" name="planPath" label="Путь к папке с изображениями планов здания" size="30" uri="/@path"/>
		</fieldset>
		<buttonset>
			<button type="submit" value="Сохранить" class="ok" action="update"/>
			<button type="submit" value="Применить" class="ok" action="apply_update"/>
			<button type="submit" value="Отмена" class="cancel" action="cancel"/>
		</buttonset>
	</form>
</data>