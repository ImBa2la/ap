<?xml version="1.0" encoding="utf-8"?>
<section><modules><module id="m2" name="apContent" title="О нас"><form title="Редактирование раздела" id="content_form" method="post" autocheck="autocheck" baseURI="file:///xml/data/%ID%.xml?/section/modules/module[@id='%MD%']">
		<field type="html" name="content" label="Содержание" uri="/html" height="350"/>
		<buttonset><button type="submit" value="Сохранить" class="ok" action="save"/></buttonset>
	</form></module><module id="m3" name="apArticles" title="Сотрудники"><form id="article_form_edit" title="Изменить данные" method="post" autocheck="autocheck" baseURI="mysql://default/%TABLE%?id=%ID%">
		<param name="row" uri="#id"/>
		<place for="date"/>
		<field type="text" name="title" label="Имя сотрудника" size="60" uri="#title"/>
		<field type="text" name="announce" label="Должность" size="60" uri="#announce"/>
		<place for="article"/>
		<field type="image" name="image" label="Картинка" baseURI="file:///userfiles/articles/%SECTION%" max="1">
			<param name="image" uri="/%IMG_ID%.jpg?max=1024"/>
			<param name="image" uri="/%IMG_ID%_preview.jpg?w=165&amp;h=190" preview="preview"/>
		</field>
		<field type="checkbox" name="active" label="Опубликовать" uri="#active"/>
		<buttonset>
			<button type="submit" value="Сохранить" class="ok" action="update"/>
			<button type="submit" value="Применить" class="ok" action="apply_update"/>
			<button type="submit" value="Отмена" class="cancel" action="cancel"/>
		</buttonset>
	</form><form id="article_form_add" title="Добавить сотрудника" method="post" autocheck="autocheck" baseURI="mysql://default/%TABLE%">
		<param name="section" uri="#section"/>
		<param name="module" uri="#module"/>
		<param name="sort" uri="#sort"/>
		<place for="date"/>
		<field type="text" name="title" label="Имя сотрудника" size="60" uri="#title"/>
		<field type="text" name="announce" label="Должность" size="60" uri="#announce"/>
		<place for="article"/>
		<field type="image" name="image" label="Картинка" baseURI="file:///userfiles/articles/%SECTION%" max="1">
			<param name="image" uri="/%IMG_ID%.jpg?max=1024"/>
			<param name="image" uri="/%IMG_ID%_preview.jpg?w=165&amp;h=190" preview="preview"/>
		</field>
		<field type="checkbox" name="active" label="Опубликовать" uri="#active"/>
		<buttonset>
			<button type="submit" value="Сохранить" class="ok" action="add"/>
			<button type="submit" value="Применить" class="ok" action="apply_add"/>
			<button type="submit" value="Отмена" class="cancel" action="cancel"/>
		</buttonset>
	</form><rowlist id="article_list" pageSize="10" sort="asc">
		<actions>
			<action name="new" title="Добавить" class="add"/>
			<action name="delete" title="Удалить выбранное"/>
		</actions>
		<col name="sort" header="№"/>
		<place for="date"/>
		<col name="title" header="Имя сотрудника"/>
		<col name="active"/>
		<buttons>
			<button action="edit" title="Редактировать"/>
			<button action="delete" title="Удалить"/>
			<button action="move" title="Переместить"/>
		</buttons>
	</rowlist></module><module id="m1" name="apMeta" title="Метатэги"><form title="Редактирование метатэгов" id="meta_form" method="post" autocheck="autocheck" baseURI="file:///xml/data/%ID%.xml?/section/modules/module[@id='%MD%']">
	<field type="text" name="title" label="Заголовок" size="60" uri="/title"/>
	<field type="text" name="keywords" label="Ключевые слова" size="60" uri="/keywords"/>
	<field type="text" name="description" label="Описание" size="60" uri="/description"/>
	<buttonset><button type="submit" value="Сохранить" class="ok" action="save"/></buttonset>
</form></module></modules></section>
